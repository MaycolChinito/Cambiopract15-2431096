<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cambiopract15.MainPage">

    <ScrollView>
        <VerticalStackLayout>


            <Image Source="dolares.png" HeightRequest="200"/>
            <Label Margin="10, 10, 10, 10">Ingrese el costo del articulo:</Label>
            <Entry x:Name="Costo" Placeholder="Ingrese el costo del artículo " Margin="10, 10, 10, 10"></Entry>
            <Label Margin="10, 10, 10, 10">Ingrese la cantidad dada por el cliente:</Label>
            <Entry x:Name="Cantidad" Placeholder="Ingrese la cantidad dada por el cliente" Margin="10, 10, 10, 10" FontFamily=""></Entry>
            <Button x:Name="Button" Text="Calcular Cambio" Clicked="Button_Clicked" Margin="10, 10, 10, 10"></Button>
            <Label Margin="10, 10, 10, 10">El cambio a entregar:</Label>
            <Entry x:Name="Cambio" Placeholder="El cambio es:" Margin="10, 10, 10, 10" IsEnabled="False"></Entry>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
